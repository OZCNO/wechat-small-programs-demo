.bgc {
  width: 100%;
  height: 150rpx;
  position: fixed;
  bottom: 0;
  background-size: cover;
}

.look {
  color: #f96;
  line-height: 100rpx;
  position: fixed;
  bottom: 100rpx;
  right: 50%;
  transform: translateX(50%);
}

.top-left {
  color: #fe0000;
  margin-top: 50rpx;
  margin-left: 20rpx;
}

.top-left image {
  width: 50rpx;
  height: 47rpx;
  vertical-align: middle;
  margin-bottom: 15rpx;
}

.top-left text {
  letter-spacing: 1px;
  line-height: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.layout {
  width: 540rpx;
  height: 540rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform:translateX(-50%) translateY(-50%);
}

.age {
  position: absolute;
  transform: rotate(-50deg);
  top: 40rpx;
  left: -10rpx;
}

.age-value {
  position: absolute;
  transform: rotate(-30deg);
  left: 90rpx;
  top: -15rpx;
}

.sex {
  position: absolute;
  transform: rotate(45deg);
  right: -10rpx;
  top: 32rpx;
}

.sex-value {
  position: absolute;
  transform: rotate(55deg);
  right: -16rpx;
  top: 89rpx;
}

.happy {
  position: absolute;
  transform: rotate(235deg);
  left: -66rpx;
  bottom: 89rpx;
}

.happy-value {
  position: absolute;
  transform: rotate(260deg);
  left: -50rpx;
  bottom: 175rpx;
}

.beauty {
  position: absolute;
  transform: rotate(120deg);
  bottom: 100rpx;
  right: -70rpx;
}

.beauty-value {
  position: absolute;
  transform: rotate(135deg);
  bottom: 24rpx;
  right: 38rpx;
}

.circle-out {
  width: 520rpx;
  height: 520rpx;
  border-radius: 50%;
  text-align: center;
  border: #121212 12rpx dotted;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateY(-50%) translateX(-50%);
}

.center-circle {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 500rpx;
  height: 500rpx;
  border-radius: 50%;
  padding: 70rpx 40rpx;
  box-sizing: border-box;
  background-color: #ffebb0;
  color: #ff6d44;
  font-size: 30rpx;
  /* line-height: 2; */
  letter-spacing: 4rpx;
  overflow: hidden;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateY(-50%) translateX(-50%);
}
